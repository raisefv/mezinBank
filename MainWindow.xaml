<Window x:Class="MezinBank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MezinBank"
        mc:Ignorable="d"
        Title="Банковское приложение" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Личные данные -->
        <GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Header="Личные данные" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="ФИО:" Width="30"/>
                    <TextBox x:Name="UserFullNameTextBox" Width="150" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Паспорт:" Width="50"/>
                    <TextBox x:Name="UserPassportTextBox" Width="150" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Дата рождения:" Width="90"/>
                    <DatePicker x:Name="UserBirthDatePicker" Width="110" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="Открыть счет" Click="OnOpenAccountButtonClick" Width="120" Margin="0,0,5,0"/>
                    <Button Content="Закрыть счет" Click="OnCloseAccountButtonClick" Width="120"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Транзакции -->
        <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Транзакции" Margin="0,0,0,10">
            <StackPanel>
                <ComboBox x:Name="TransactionTypeSelector" 
                          SelectionChanged="OnTransactionTypeChanged" 
                          SelectedIndex="0" 
                          Margin="5" 
                          Width="300"
                          HorizontalAlignment="Center">
                    <ComboBoxItem Content="Пополнение"/>
                    <ComboBoxItem Content="Снятие"/>
                    <ComboBoxItem Content="Перевод"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <TextBlock Text="Сумма:" Width="60"/>
                    <TextBox x:Name="TransactionAmountTextBox" Width="150" Margin="5,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <Button Content="Пополнить" Click="OnDepositButtonClick" Width="100" Margin="5"/>
                    <Button Content="Снять" Click="OnWithdrawButtonClick" Width="100" Margin="5"/>
                    <Button Content="Перевести" Click="OnTransferButtonClick" Width="100" Margin="5"/>
                </StackPanel>

                <TextBox x:Name="TransactionLogTextBox" 
                         IsReadOnly="True" 
                         Height="100" 
                         Margin="5" 
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </GroupBox>

        <!-- Пользователь 1 -->
        <GroupBox Grid.Row="2" Grid.Column="0" Header="Пользователь 1" Margin="5,0,5,0">
            <StackPanel>
                <ComboBox x:Name="FirstUserSelector" 
                          SelectionChanged="OnFirstUserSelectionChanged" 
                          Margin="5"/>
                <TextBox x:Name="FirstUserInfoTextBox" 
                         IsReadOnly="True" 
                         Margin="5"
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         Height="180"/>
            </StackPanel>
        </GroupBox>

        <!-- Пользователь 2 -->
        <GroupBox Grid.Row="2" Grid.Column="1" Header="Пользователь 2" Margin="5,0,5,0">
            <StackPanel>
                <ComboBox x:Name="SecondUserSelector" 
                          SelectionChanged="OnSecondUserSelectionChanged" 
                          Margin="5"/>
                <TextBox x:Name="SecondUserInfoTextBox" 
                         IsReadOnly="True" 
                         Margin="5"
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         Height="180"/>
            </StackPanel>
        </GroupBox>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Загрузить пользователей" Click="OnLoadJsonButtonClick" Width="180" Margin="5"/>
            <Button Content="Сохранить пользователей" Click="OnSaveJsonButtonClick" Width="180" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>